#!/usr/bin/env python
# In project imports
import srp_md
from srp_md.learn import fake_learn
from srp_md.sense import fake_sense

# Ros imports
import rospy


def main():
    rospy.init_node('srp_md')

    # Define the srp
    srp = srp_md.SrpMd()

    # Make a learner and sensor
    srp.set_learner('fake_learner')
    srp.set_sensor('fake_sensor')

    # Get observations
    for i in xrange(10):
        srp.accept_data(i)
        srp.process_data()

    # Learn
    srp.learn()

    # Spin forever
    rospy.spin()


if __name__ == '__main__':
    main()
